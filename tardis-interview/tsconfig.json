{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums" : true,
        "allowJs": false,
        "sourceMap": true
    },
    "exclude": [
        "index.js",
        "build",
        "node_modules"
    ]

}